<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="PHP_CodeSniffer" xsi:noNamespaceSchemaLocation="phpcs.xsd">
	<description>The config for the Code Sniffer phpcs executable.</description>

	<file>./config</file>
	<file>./public</file>
	<file>./src</file>
	<file>./tests</file>

	<exclude-pattern>*/public/css/*</exclude-pattern>
	<exclude-pattern>*/public/img/*</exclude-pattern>
	<exclude-pattern>*/public/js/*</exclude-pattern>
	<exclude-pattern>*/src/scss/*\.(scss)$</exclude-pattern>

	<arg name="extensions" value="php" />
	<arg name="colors"/>
	<arg value="n"/>

	<rule ref="PSR12"/>
</ruleset>

